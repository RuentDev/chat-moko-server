{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true
  },
}